<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="me.eun.mapper.BoardMapper">
	<sql id="search">
		<where>
			<trim prefixOverrides="OR">
				<foreach item="type" collection="typeCollection">
					<trim prefix="OR">
						<choose>
							<when test="type == 'T'.toString()">
								title like concat('%',#{keyword},'%')
							</when>
							<when test="type =='C'.toString()">
								content like concat('%',#{keyword},'%')
							</when>
							<when test="type =='W'.toString()">
								writer like concat('%',#{keyword},'%')
							</when>
						</choose>
					</trim>
				</foreach>
			</trim>
		</where>
	</sql>

	<select id="getList" resultType="me.eun.model.Board">
		select * from board_tbl
		<include refid="search" />
		order by bno desc
		limit #{pageStart},#{perPageNum}
	</select>

	<select id="totalCount" resultType="int">
		select count(*) from board_tbl
		<include refid="search" />
	</select>

	<select id="get" resultType="me.eun.model.Board">
		select* from board_tbl where bno = #{bno}
	</select>

	<insert id="insert">
		<selectKey keyProperty="bno" order="BEFORE" resultType="Long">
			select max(bno)+1 from board_tbl
		</selectKey>
		insert into board_tbl(bno,title,content,writer)
		values(#{bno},#{title}, #{content}, #{writer})
	</insert>
	<update id="update">
		update board_tbl set
		title = #{title},
		content = #{content},
		updateDate = now()
		where bno = #{bno}
	</update>
	<delete id="delete">
		delete from board_tbl where bno = #{bno}
	</delete>
	
	<!--댓글 증감 -->
	<update id = "updateReplyCnt">
		update board_tbl set replyCnt = replyCnt + #{amount}
		where bno = #{bno}
	
	</update>
</mapper>